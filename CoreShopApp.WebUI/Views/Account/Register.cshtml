@model CoreShopApp.WebUI.Models.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">@ViewBag.Title</h1>


<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Register">

            @* modelstate.addmodal mesajlarının gözükmesi için All yapıldı *@
            <div asp-validation-summary="All" class="text-danger"></div>

            @* adı bölümü *@
            <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                <div class="col-md-10">
                    <input asp-for="FirstName" class="form-control" />
                </div>                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            @* soyad bölümü *@
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            @* kullanıcı adı bölümü *@
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            @* şifre bölümü *@
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            @* şifre tekrar bölümü *@
            <div class="form-group">
                <label asp-for="RePassword" class="control-label"></label>
                <input asp-for="RePassword" class="form-control" />
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            @* buton bölümü *@
            <div class="form-group">
                <input type="submit" value="Kayıt ol" class="btn btn-primary text-center" />
                <a href="/Home/Index" class="btn btn-danger">İptal</a>
            </div>

        </form>
    </div>
</div>


