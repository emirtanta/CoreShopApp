@model CategoryListViewModels

@{
    ViewData["Title"] = "Kategoriler Listesi";
}

<h1>CategoryList</h1>

<div class="row">
    <div class="col-md-12">
        <h1 class="h3">@ViewBag.Title</h1>
        <hr>
        <a href="/Admin/CategoryCreate" class="btn btn-primary btn-sm">Kategori Ekle</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td style="width: 30px;">Name</td>
                    <td style="width: 150px;"></td>
                </tr>
            </thead>
            <tbody>

                @if (Model.Categories.Count > 0)
                {
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>@item.CategoryId/td>
                            <td>@item.Name</td>


                            <td>
                                <a href="/Admin/Categories/@item.CategoryId" class="btn btn-primary btn-sm mr-2">Edit</a>

                                <form action="/Admin/CategoryDelete" method="POST" style="display: inline;">
                                    <input type="hidden" name="categoryId" value="@item.CategoryId">

                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>

                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No Categories</h3>
                    </div>
                }

            </tbody>
        </table>

    </div>
</div>
